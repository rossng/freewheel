{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "name": "Freewheel",
  "version": "0.0.1",
  "description": "Freewheel automatically scrolls the page for you so that you can record slick screen captures.",
  "browser_specific_settings": {
    "gecko": {
      "id": "{f3ba6ec7-7fa4-4081-b888-27e826dc3c3f}"
    }
  },

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png"
  },

  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png",
      "256": "images/icon-256.png"
    },
    "default_popup": "popup.html",
    "default_title": "Freewheel"
  },

  "permissions": ["activeTab", "scripting", "storage", "tabs"]
}
